package nlp;

import java.util.ArrayList;
import java.io.Serializable;


public class PostingsList implements Serializable {
    
    /** The postings list as a linked list. */
    public ArrayList<PostingsEntry> list = new ArrayList<PostingsEntry>();
   
    /* Various selectors and modifiers */
    public int size() {
	return list.size();
    }

    public PostingsEntry get( int i ) {
	return list.get( i );
    }
                                    

    public void add( int docID ) {
	PostingsEntry newEntry = new PostingsEntry();
	newEntry.docID = docID;
	list.add( newEntry );
    }

    public void addRanked( PostingsEntry entry ) {
	list.add( entry );
    }
 
    public void addEntryPosition( int offset ) {
	PostingsEntry entry = list.get( list.size() -1 );
	entry.addPosition( offset );
    }

    public void addNew( int docID, int offset ) {
	PostingsEntry newEntry = new PostingsEntry();
	newEntry.docID = docID;
	newEntry.score = 1;
	newEntry.addPosition( offset );
	list.add( newEntry );
    }


}
	

			   
